{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2015"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "removeComments": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
